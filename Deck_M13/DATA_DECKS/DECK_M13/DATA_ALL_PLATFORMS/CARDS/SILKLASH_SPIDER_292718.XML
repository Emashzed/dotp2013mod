  <ACTIVATED_ABILITY LKI_shield_effect_source="1" dangerous="1" filter_zone="ZONE_IN_PLAY">
    <LOCALISED_TEXT LanguageCode="en-US"><![CDATA[{X}{G}{G}: Silklash Spider deals X damage to each creature with flying.]]></LOCALISED_TEXT>
    <LOCALISED_TEXT LanguageCode="fr-FR"><![CDATA[{X}{G}{G}: L’Araignée fouettesoie inflige X blessures à chaque créature avec le vol.]]></LOCALISED_TEXT>
    <LOCALISED_TEXT LanguageCode="es-ES"><![CDATA[{X}{G}{G}: La Araña azotaseda hace X puntos de daño a cada criatura que tenga la habilidad de volar.]]></LOCALISED_TEXT>
    <LOCALISED_TEXT LanguageCode="de-DE"><![CDATA[{X}{G}{G}: Die Seidenpeitschen-Spinne fügt allen fliegenden Kreaturen X Schadenspunkte zu.]]></LOCALISED_TEXT>
    <LOCALISED_TEXT LanguageCode="it-IT"><![CDATA[{X}{G}{G}: Il Ragno Setafrusta infligge X danni a ogni creatura con volare.]]></LOCALISED_TEXT>
    <LOCALISED_TEXT LanguageCode="jp-JA"><![CDATA[{X}{G}{G}：絹鎖の蜘蛛は飛行を持つ各クリーチャーにそれぞれＸ点のダメージを与える。]]></LOCALISED_TEXT>
    <LOCALISED_TEXT LanguageCode="ko-KR"><![CDATA[{X}{G}{G}: 비단거미줄 거미는 비행 능력을 가진 각 생물에게 피해 X점을 입힌다.]]></LOCALISED_TEXT>
    <LOCALISED_TEXT LanguageCode="ru-RU"><![CDATA[{X}{G}{G}: Паук-Шелкопряд наносит Х повреждений каждому существу с Полетом.]]></LOCALISED_TEXT>
    <LOCALISED_TEXT LanguageCode="pt-BR"><![CDATA[{X}{G}{G}: Aranha do Chicote de Seda causa X pontos de dano a cada criatura com voar.]]></LOCALISED_TEXT>
    <COST type="Mana" cost="{X}{G}{G}" />
    <FILTER>
    return ( CreaturesInPlay() and  
    FilteredCard():GetCurrentCharacteristics():Characteristic_Get( CHARACTERISTIC_FLYING ) ~= 0 )
    </FILTER>
    <RESOLUTION_TIME_ACTION>
    local damage = GetEffectX()
    local source = EffectSource()
    if source == nil then
      source = Object()
    end
	
    if (FilteredCard() ~= nil) then   
    	FilteredCard():DealDamage( damage, source )  
    end
    </RESOLUTION_TIME_ACTION>
    <AI_AVAILABILITY type="in_response" />
    <AI_AVAILABILITY step="begin_combat" turn="their_turn" />
    <AI_AVAILABILITY step="main_1" turn="my_turn" />
    <AI_AVAILABILITY step="declare_attackers" turn="their_turn" />
    <AI_AVAILABILITY step="declare_blockers" />
    <AI_AVAILABILITY step="end_of_turn" />
  </ACTIVATED_ABILITY>
