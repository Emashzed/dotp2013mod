  <TRIGGERED_ABILITY filter_zone="ZONE_IN_PLAY">
    <LOCALISED_TEXT LanguageCode="en-US"><![CDATA[Whenever Blazing Specter deals combat damage to a player, that player discards a card.]]></LOCALISED_TEXT>
    <LOCALISED_TEXT LanguageCode="fr-FR"><![CDATA[À chaque fois que le Spectre brûlant inflige des blessures de combat à un joueur, ce joueur se défausse d’une carte.]]></LOCALISED_TEXT>
    <LOCALISED_TEXT LanguageCode="es-ES"><![CDATA[Siempre que el Espectro llameante haga daño de combate a un jugador, ese jugador descarta una carta.]]></LOCALISED_TEXT>
    <LOCALISED_TEXT LanguageCode="de-DE"><![CDATA[Immer wenn das Leuchtschweif-Gespenst einem Spieler Kampfschaden zufügt, wirft dieser Spieler eine Karte aus seiner Hand ab.]]></LOCALISED_TEXT>
    <LOCALISED_TEXT LanguageCode="it-IT"><![CDATA[Ogniqualvolta lo Spettro Fiammeggiante infligge danno da combattimento a un giocatore, quel giocatore scarta una carta.]]></LOCALISED_TEXT>
    <LOCALISED_TEXT LanguageCode="jp-JA"><![CDATA[燃え立つ死霊がいずれかのプレイヤーに戦闘ダメージを与えるたび、そのプレイヤーはカードを１枚捨てる。]]></LOCALISED_TEXT>
    <LOCALISED_TEXT LanguageCode="ko-KR"><![CDATA[불타는 스펙터가 플레이어에게 전투피해를 입힐 때마다, 그 플레이어는 카드 한 장을 버린다.]]></LOCALISED_TEXT>
    <LOCALISED_TEXT LanguageCode="ru-RU"><![CDATA[Каждый раз, когда Пылающий Призрак наносит боевые повреждения игроку, тот игрок сбрасывает карту.]]></LOCALISED_TEXT>
    <LOCALISED_TEXT LanguageCode="pt-BR"><![CDATA[Toda vez que Espectro Flamejante causa dano de combate a um jogador, aquele jogador descarta um card.]]></LOCALISED_TEXT>
    <TRIGGER value="CREATURE_DEALS_COMBAT_DAMAGE_TO_PLAYER" simple_qualifier="self" />
    <RESOLUTION_TIME_ACTION>
    local player = TriggerPlayer()
    if player ~= nil then
    	local filter = Object():GetFilter()
    	filter:Clear()
    	filter:SetZone( ZONE_HAND ) 
    	filter:SetPlayer( player )
    	filter:NotTargetted()
    	player:SetTargetCount( 1 )
    	for i=0,1-1 do
    		player:SetTargetPrompt( i, "CARD_QUERY_CHOOSE_CARD_TO_DISCARD" )
    	end
    	player:ChooseTargets( NO_VALIDATION, EffectDC():Make_Targets(1) ) 
    end
    </RESOLUTION_TIME_ACTION>
    <RESOLUTION_TIME_ACTION>
    local player = TriggerPlayer()
    if player ~= nil then 
    	for i = 0,(1-1) do
    		local target_card = EffectDC():Get_Targets(1):Get_CardPtr(i)
    		if target_card ~= nil  then
    			target_card:Discard()
    		end
    	end
    end
    </RESOLUTION_TIME_ACTION>
  </TRIGGERED_ABILITY>
